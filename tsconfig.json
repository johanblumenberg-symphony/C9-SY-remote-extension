{
    "compilerOptions": {
        "outDir": "dist",

        "strictNullChecks": true,
        "noUnusedLocals": false, // Checked by linter
        "noUnusedParameters": false, // Checked by linter
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noStrictGenericChecks": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "resolveJsonModule": true,

        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "jsx": "react",
        "target": "es3",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2016",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
